<% provide(:title, 'Cadastro de pacientes e família') %>


<div class="container">

<h1>Cadastrando família (tutores e pacientes)</h1>


<div class="row">
  <div class="col-sm-6">
    <div class="card" id="tutores_cadastrados">
      <div class="card-body">
        <h5 class="card-title">Tutores</h5>
<!--% unless familia.tutores.empty? %-->
    <ul>
    <% @familia.tutores.each do |tutor| %>
      <li><%= tutor.nome %> (<%= tutor.telefones %>) </li>
    <% end %>
    </ul>
<!--% end %-->
      </div>
    </div>
  </div>
  <div class="col-sm-6" id="pacientes_cadastrados">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Pacientes</h5>
<!--% unless familia.tutores.empty? %-->

    <% @familia.pacientes.each do |p| %>
      <p>
        <%= p.nome %> 
        <div class="btn-group btn-group-sm" role="group">
          <%= link_to "Iniciar atendimento", new_paciente_atendimento_path(p), class: "btn btn-secondary", id: "new_paciente_atendimento_#{p.id}" %>
        </div>
      </p>
    <% end %>

<!--% end %-->
      </div>
    </div>
  </div>
</div>
<small id="AdiconarHelp" class="form-text text-muted">Você pode cadastrar vários tutores e pacientes que compõem a 'família'.</small>
<%= render 'tutores_form', familia: @familia, tutor: @tutor %>
<%= render 'pacientes_form', familia: @familia, paciente: @paciente %>



</div>